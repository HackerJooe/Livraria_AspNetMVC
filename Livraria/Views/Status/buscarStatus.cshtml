@model Livraria.Models.modelStatus

@{
    ViewBag.Title = "Buscar Status";
}

<h2>Buscar Status</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sta)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codStatus)
                    </td>
